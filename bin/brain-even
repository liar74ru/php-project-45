#!/usr/bin/env php
<?php

require_once __DIR__ . '/../vendor/autoload.php';

use function BrainGames\Engine\{getName, showName};
use function BrainGames\Games\gameEven;

echo "Welcome to the Brain Game!\n";

$name = getName();               //Знакомимся с пользователем
echo showName($name);

$round = 3;                      //Количество раундов игры
echo gameEven($round, $name);    //Игра на четное или нечетное
